<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartAir"
        tools:targetApi="31">
        <activity
            android:name=".Parent_Provider_Dashboard"
            android:exported="false" />
        <activity
            android:name=".ChildDashboard"
            android:exported="false" />
        <activity
            android:name=".password_recover"
            android:exported="false" />
        <activity
            android:name=".create_account"
            android:exported="false" />
        <activity android:name=".ParentDashboardActivity" />
        <activity android:name=".ProviderDashboardActivity" />
        <activity android:name=".auth.login.LoginFragment"
            tools:ignore="Instantiatable" />
        <activity android:name=".OnboardingActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SmartAir">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginPage"
            android:exported="false"
            android:theme="@style/Theme.SmartAir" />
    </application>

</manifest>