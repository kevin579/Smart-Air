<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvCurrentStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current streak: 0 days"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvLongestStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longest streak: 0 days"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentStreak"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnCompleteMedication"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="今天用药完成"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvLongestStreak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
