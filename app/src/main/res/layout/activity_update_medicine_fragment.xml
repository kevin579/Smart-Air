<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1565C0"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="My Dashboard"
        app:titleTextColor="@android:color/white" />

    <!-- Content Area -->

    <EditText
        android:id="@+id/editTextPurchaseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Purchase Date"
        android:focusable="false"
        android:clickable="true" />

    <EditText
        android:id="@+id/editTextExpireDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expire Date"
        android:focusable="false"
        android:clickable="true" />

    <EditText
        android:id="@+id/editTextPrescriptionAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prescription Amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAuthor" />

    <EditText
        android:id="@+id/editTextCurrentAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Current Amount (Optional, default same as prescription amount)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAuthor" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1565C0"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCategory" />

</LinearLayout>