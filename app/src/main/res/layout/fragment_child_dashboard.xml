<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1565C0"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="My Dashboard"
        app:titleTextColor="@android:color/white" />

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">



            <Button
                android:id="@+id/btnViewLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#4CAF50"
                android:fontFamily="sans-serif-medium"
                android:padding="16dp"
                android:text="View logs and add new entries"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="18dp"
                />

            <Button
                android:id="@+id/btnTechnique"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#2196F3"
                android:fontFamily="sans-serif-medium"
                android:padding="16dp"
                android:text="Want help with your technique?"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="18dp" />

            <Button
                android:id="@+id/btnTriage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#F44336"
                android:fontFamily="sans-serif-medium"
                android:padding="16dp"
                android:text="Having trouble breathing?"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="18dp" />

            <Button
                android:id="@+id/btnBadges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#9C27B0"
                android:fontFamily="sans-serif-medium"
                android:padding="16dp"
                android:text="Streaks and Badges"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="18dp" />

            <Button
                android:id="@+id/btnSymptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FF9800"
                android:fontFamily="sans-serif-medium"
                android:padding="16dp"
                android:text="Symptoms"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="18dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>